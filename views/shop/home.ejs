<%- include ../partials/header %>

<!-- Top Carousel -->
<div class="hero-banner-wrapper">
    <div class="container" >
        <div class="row">
            <div class="col-12 col-lg-2 d-none d-lg-block pr-0">
                <%- include ../partials/sidebar %>
            </div>
            <div class="col-12 col-lg-7">
                <div id="topCarousel" class="carousel slide home-slider mb-3 mt-0 pt-0" data-ride="carousel" >
                    <ol class="carousel-indicators">
                        <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#topCarousel" data-slide-to="1"></li>
                        <li data-target="#topCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/slide/1.png" class="slider-image animated fadeInRight"> 
                            <div class="slide-content item-left align-left">
                                <div class="captions">
                                    <span class="caption caption-1 animated fadeInRight"><b>DJI</b> MAVIC PRO </span>
                                    <span class="caption caption-2 animated fadeInRight delay-03s"> The creative's shop for flying cameras <br/>and flight controllers </span> 
                                    <div><a href="#" target="_self" class="btn btn-primary btn-slider animated fadeInUp delay-07s" tabindex="-1"> ORDER NOW </a></div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="/images/slide/2.png" class="slider-image animated fadeInRight"> 
                            <div class="slide-content item-left align-left">
                                <div class="captions">
                                    <span class="caption caption-1 animated fadeInRight"><b>XIAOMI</b> SPEAKER</span>
                                    <span class="caption caption-2 animated fadeInRight delay-03s"> There are a upgrade for the quality and <br/>control in the home </span> 
                                    <div><a href="#" target="_self" class="btn btn-primary btn-slider animated fadeInUp delay-07s" tabindex="-1"> ORDER NOW </a></div>
                                </div>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img src="/images/slide/3.png" class="slider-image animated fadeInRight"> 
                            <div class="slide-content item-right align-right">
                                <div class="captions">
                                    <span class="caption caption-1 animated fadeInLeft"><b>3D</b> Virtual Reality</span>
                                    <span class="caption caption-2 animated fadeInLeft delay-03s"> VR 3D glasses with remote control <br/>gamepad at best price </span> 
                                    <div><a href="#" target="_self" class="btn btn-primary btn-slider animated fadeInUp delay-07s" tabindex="-1"> ORDER NOW </a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a
                        class="carousel-control-prev"
                        href="#topCarousel"
                        role="button"
                        data-slide="prev"
                    >
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a
                        class="carousel-control-next"
                        href="#topCarousel"
                        role="button"
                        data-slide="next"
                    >
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-12 col-lg-3 d-none d-lg-block pl-0">
                <div class="pb-1"><a href="/products"><img src="/images/womens-bags.png" class="animated fadeInRight" alt="" style="width: 100%; max-width: 423px;"></a></div>
                <div class="pt-4"><a href="/products"><img src="/images/iphone.png" class="animated fadeInRight" alt="" style="width: 100%; max-width: 423px;"></a></div>
            </div>
        </div>
    </div>
</div>

<!-- Store's categories section -->
<div id="home-stores-catories" class="d-block d-lg-none">
    <div class="container">
        <div class="category-field-container">
            <select name="select_category" class="form-control select_category">
                <% if (categories) { %>
                    <option value="/products/" <% if (pageName === "All Products") { %> selected <% } %> >All (Category)</option>
                <%} else { %>
                    <option value="">Category</option>
                <% } %>
                
                <% if (categories) { %>
                    <% categories.forEach( category => { %>
                        <option 
                            value="/products/<%= category.slug %>"
                            <% if (pageName === category.title) { %> selected <% } %> 
                        ><%= category.title %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
    </div>
</div>

<%- include ../partials/featured-info %>


<!-- Latest products slider -->
<div class="container mb-4 mt-5">
  <!--Carousel Wrapper-->
  <div
    id="products-carousel"
    class="carousel slide carousel-multi-item"
    data-ride="carousel"
  >
    <!--Controls-->
    <div class="controls-top mb-2">
      <div class="row">
        <div class="col-8">
          <h5>Latest Products</h5>
        </div>
      </div>
    </div>
    <!--/.Controls-->
  </div>
  <!--/.Carousel Wrapper-->
    <div class="row-product-list">
        <% for(let i=0; i< products.length; i++) { %>
            <% if (products[i] && products[i]._id && products[i].category && products[i].category.slug) { %>
                <%- include ../partials/product-item %>
            <%}%>
        <%}%>
    </div>
    <div class="more-products-link-container text-center mt-3">
        <a href="/products" class="mt-3 ">view more products</a>
    </div>
</div>

<%- include ../partials/footer %>
