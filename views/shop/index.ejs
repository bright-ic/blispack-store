<%- include ../partials/header %> 
<div class="container-fluid">
   <!-- Flash messages -->
   <% if(successMsg || errorMsg) { %>
        <div class="row mt-3 mb-3">
        <div class="col-md-12 m-auto">
            <% if (successMsg) { %>
            <div id="success" class="alert alert-success">
            <%= successMsg %>
            </div>
            <% } else { %>
            <div id="success" class="alert alert-success d-none"></div>
            <% } %>
        </div>
        <div class="col-md-12 m-auto">
            <% if (errorMsg) { %>
            <div id="error" class="alert alert-danger">
            <%= errorMsg %>
            </div>
            <% } else { %>
            <div id="error" class="alert alert-danger d-none"></div>
            <% } %>
        </div>
        </div>
    <% } %>
</div>

<div class="products-banner-wrapper"> 
    <div class="container-fluid">
        <!-- Breadcrumbs -->
        <div class="row mt-0">
            <div class="col-md-12 m-auto">
                <%if (breadcrumbs) { %>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb" style="background: transparent;">
                    <% breadcrumbs.forEach(crumb => { if(!crumb.name.startsWith("?")){%>
                    <li class="breadcrumb-item" aria-current="page">
                        <a href="<%=crumb.url%>"><%= crumb.name %></a>
                    </li>
                    <%}})%>
                    </ol>
                </nav>
                <%} %>
            </div>
        </div>
        <!-- Page banner image -->

		<% if(pageName == 'All Products') { %>
			<div class="text-center hero-container">
				<img
				class="d-block w-100 hero-image"
				src="/images/banner-all-products.jpg"
				/>
				<div class="hero-text">
				<h1 class="text-white"><%=pageName%></h1>
				</div>
			</div>
		<% } else { %> <% categories.forEach( category => { %> <% if(pageName == category.title){ %>
			<div class="text-center hero-container">
				<img
				class="d-block w-100 hero-image"
				src="/images/banner-all-products.jpg"
				/>
				<div class="hero-text">
				<h1 class="text-white"><%=pageName%></h1>
				</div>
			</div>
		<%}%> <%})%> <%}%>
    </div>
</div>

<%- include ../partials/featured-info %>

<div class="container">
  <!-- <hr class="gradient-style" /> -->
  <br/>
  <br/>
  <!-- Contents -->
  	<div class="row">
		<div class="col-12 col-lg-2 d-none d-lg-block pr-0">
			<%- include ../partials/sidebar %>
		</div>
		<div class="col-12 col-lg-10">
			<div class="row-product-list">
				<% for(let i=0; i< products.length; i++) { %>
					<% if (products[i] && products[i]._id && products[i].category && products[i].category.slug) { %>
						<%- include ../partials/product-item %>
					<%}%>
				<%}%>
			</div>
    	</div>
	</div>

  <%- include ../partials/pagination %>
</div>
<%- include ../partials/footer %>
