  <body class="<% if (selected_page) { %><%=selected_page.toLowerCase()%><% } %>">
    <div id="page-container">
      <div id="content-wrap">
            <div class="row nav-container mx-auto">
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 d-none d-lg-none">
                    <div class="search-container">
                    <form class="form-inline" action="/products/search" method="GET">
                        <input
                        class="search-input"
                        type="search"
                        placeholder="Search"
                        name="search"
                        />
                    </form>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 logo-container only_non_mobile">
                    <a href="/">
                    <img class="logo-img img-fluid" src="/images/shop_logo.jpeg" alt="logo" />
                    <div class="text-center" style="line-height: 18px;">
                        <h4 class="logo-title">Leading Bliss Pack </h4>
                    </div>
                    </a>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 right-nav only_non_mobile">
                    <ul>
                    <li>
                        <a href="/shopping-cart">
                        <i class="fas fa-shopping-cart"></i> <% if(session.cart) { %>
                        <span class="badge badge-pill badge-info"
                            ><%= session.cart.totalQty %></span
                        >
                        <% } else { %>
                        <span class="badge badge-pill badge-info">0</span>
                        <% } %>
                        </a>
                    </li>
                    <% if (login) { %>
                    <li>
                        <a
                        class="dropdown-toggle"
                        href="#"
                        role="button"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                        >
                        <i class="fas fa-user"></i> Welcome <%=currentUser.username%>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/user/profile">User Account</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/user/logout">Logout</a>
                        </div>
                    </li>
                    <% } else {%>
                    <li>
                        <a href="/user/signup"> Sign Up</a>
                    </li>
                    <li>
                        <a href="/user/signin"> Sign In</a>
                    </li>
                    <% }%>
                    </ul>
                </div>
            </div>
            <%- include ../partials/categories-navbar%>
            <%- include ../partials/category-and-search %>

